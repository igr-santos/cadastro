{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "pylint.args": [
    "\"--django-settings-module=project.settings\"",
    "\"--rcfile=.pylintrc\"",
    "\"--load-plugins=pylint_django\"",
    "\"--django-settings-module=project.settings\""
  ]
}
